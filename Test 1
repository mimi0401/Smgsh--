!pip install openai

import openai

openai.api_key = "你的_OPENAI_API_KEY"

def 問AI(問題):
    回應 = openai.ChatCompletion.create(
        model="gpt-4",
        messages=[{"role": "user", "content": 問題}]
    )
    return 回應['choices'][0]['message']['content']

問題們 = [
    "吃什麼？",
    "今天天氣？",
    "很累怎麼辦？",
    "幫我加油！",
    "想看電影",
    "幫我打招呼"
]

for i, 問題 in enumerate(問題們):
    print(f"📝 問題 {i+1}：{問題}")
    回答 = 問AI(問題)
    print(f"🤖 回答：{回答}\n")
